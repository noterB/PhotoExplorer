<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.blsoft.photoexplorer.PhotoDetailsActivity">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:padding="8dp"
                    android:text="@string/photographer"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/photographerTextView"
                    android:gravity="right"
                    android:padding="8dp"
                    android:layout_weight="1"
                    tools:text="John Doe" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:padding="8dp"
                    android:text="@string/location"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <TextView
                    android:id="@+id/locationTextView"
                    android:gravity="right"
                    android:padding="8dp"
                    android:layout_weight="1"
                    tools:text="Boston, MA" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:padding="8dp"
                    android:text="@string/title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
                <TextView
                    android:id="@+id/photoTitleTextView"
                    android:gravity="right"
                    android:padding="8dp"
                    android:layout_weight="1"
                    tools:text="Lorem ipsum blah blah blah blah asdfasdfasdfasdfasdfasdf contemp hoodwinked robin india" />
            </TableRow>

        </TableLayout>



    </LinearLayout>
</ScrollView>

